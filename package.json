{
  "name": "letisia-technology-portfolio",
  "version": "2.0.0",
  "description": "Modern technology portfolio with advanced performance optimizations and PWA features",
  "main": "index.js",
  "scripts": {
    "dev": "bundle exec jekyll serve --livereload",
    "build": "bundle exec jekyll build",
    "build:prod": "JEKYLL_ENV=production bundle exec jekyll build",
    "optimize": "npm run optimize:css && npm run optimize:js && npm run optimize:images",
    "optimize:css": "postcss _site/assets/css/main.css --use autoprefixer --use cssnano --output _site/assets/css/main.css",
    "optimize:js": "terser _site/assets/js/modern-framework.js --output _site/assets/js/modern-framework.js --compress --mangle",
    "optimize:images": "imagemin '_site/assets/images/*' --out-dir='_site/assets/images/'",
    "sw": "workbox generateSW workbox-config.js",
    "lighthouse": "lhci collect --url=http://localhost:4000",
    "test:links": "blc http://localhost:4000 --recursive",
    "test:html": "htmlhint '_site/**/*.html'",
    "test:css": "stylelint 'assets/css/**/*.scss'",
    "test:js": "eslint assets/js/**/*.js",
    "test": "npm run test:html && npm run test:css && npm run test:js",
    "deploy": "npm run build:prod && npm run optimize && npm run sw"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/letisiapangataa/letisiapangataa.github.io.git"
  },
  "keywords": [
    "portfolio",
    "cloud-architecture",
    "azure",
    "jekyll",
    "github-pages",
    "pwa",
    "performance",
    "modern-web"
  ],
  "author": "Letisia Pangata'a",
  "license": "MIT",
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "autoprefixer": "^10.4.16",
    "broken-link-checker": "^0.7.8",
    "cssnano": "^6.0.1",
    "eslint": "^8.55.0",
    "htmlhint": "^1.1.4",
    "imagemin": "^8.0.1",
    "imagemin-cli": "^7.0.0",
    "imagemin-webp": "^8.0.0",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "terser": "^5.24.0",
    "workbox-cli": "^7.0.0"
  },
  "dependencies": {
    "workbox-window": "^7.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie <= 11"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
